<mvc:View
    controllerName="aapg.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="{i18n>employeeDetails}">
        
        <Panel>
            <FlexBox height="65px" alignItems="Center" justifyContent="Center">
                <items>
                    <Text text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}" class="boldText"/>
                </items>
            </FlexBox>

            <FlexBox height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox>
                        <Text text="{i18n>employeeID}" class="boldText"/>
                        <Text text="{jsonEmployees>EmployeeID}"/>
                    </VBox>
                    <VBox>
                        <Text text="{i18n>employeeTitle}" class="boldText"/>
                        <Text text="{jsonEmployees>Title}"/>
                    </VBox>                    
                </items>
            </FlexBox>

            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <HBox>
                        <Text text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>Country}"/>
                        <layoutData>
                            <FlexItemData growFactor="2"/>
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Text text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>City}"/>
                        <layoutData>
                            <FlexItemData growFactor="2"/>
                        </layoutData>
                    </HBox>
                    <FlexBox direction="Row">
                        <Text text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{jsonEmployees>PostalCode}"/>
                    </FlexBox>
                </items>
            </FlexBox>
        </Panel>

        <Panel class="sapUiSizeCompact" backgroundDesign="Transparent">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>incidence} {= ${jsonEmployees>Country} !=='US' ? ${i18n>europe} : ${i18n>us}}"/>
                    <ToolbarSpacer />
                    <Button text="{i18n>btnCreateIncidence}" press=".onCreateIncidence"/>
                </Toolbar>
            </headerToolbar>

            <Panel id="tableIncidence"
                   class="sapUiNoContentPadding" 
                   backgroundDesign="Transparent">
                   
            </Panel>

        </Panel>

    </Page>
</mvc:View>
