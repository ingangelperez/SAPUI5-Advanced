<mvc:View
    controllerName="aapg.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" 
                      title="{i18n>title}">
                    <content>
                        <HBox id="mainViewHbox1">
                            <Label id="labelEmpolyee" 
                                   labelFor="inputEmployee" 
                                   text="{i18n>labelEmployee}" 
                                   class="sapUiTinyMargin"/>
                            <Input id="inputEmpolyee" 
                                   maxLength="6" 
                                   width="200px" 
                                   class="sapUiSmallMarginEnd"
                                   value="{/EmployeeId}"/>
                            <Label id="labelSelectCountry" 
                                   labelFor="slCountry" 
                                   text="{i18n>labelCountry}" 
                                   class="sapUiTinyMargin"
                                   visible="true"/>
                            <Select id="slCountry"
                                    forceSelection="false"
                                    visible="true"
                                    class=""
                                    selectedKey="{/CountryKey}"
                                    items="{/ListCountry}">
                                <items>
                                    <core:Item key="{Key}" text="{Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter"
                                    text="{i18n>buttonFilter}" 
                                    press=".onFilter"
                                    icon="sap-icon://search"
                                    class="sapUiTinyMarginEnd"/>
                            <Button id="btnClearFilter"
                                    text="{i18n>buttonClearFilter}" 
                                    press=".onClearFilter"
                                    icon="sap-icon://clear-filter"
                                    class="sapUiTinyMarginEnd"/>
                        </HBox>
                        <HBox>
                            <Panel>
                                <Table id="tableEmployee"
                                       items="{/Employees}">
                                    <columns>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableColumnID}"/>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableColumnName}"/>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableColumnCountry}"/>
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableColumnCity}"/>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press=".showPostalCode">
                                            <cells>
                                                <Label text="{EmployeeID}"/>
                                                <Label text="{LastName}, {FirstName}"/>
                                                <Label text="{Country}"/>
                                                <Label text="{City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
